{
    "manifest_version": 2,
    "name": "WhatsApp Web in Thunderbird",
    "description": "Open WhatsApp Web in a Thunderbird Tab",
    "version": "1.0.0",
    "author": "Florent Tassy",
    "homepage_url": "https://github.com/ftassy/WhatsApp-Web-in-Thunderbird",
    "default_locale": "en",
    "applications": {
        "gecko": {
            "id": "wa-in-th@ftassy.github.io",
            "strict_min_version": "68.0"
        }
    },
    "permissions": [
        "tabs",
        "storage",
        "menus",
        "webRequest",
        "webRequestBlocking",
        "https://*.whatsapp.com/*"
    ],
    "browser_action": {
        "default_title": "WhatsApp",
        "default_icon": "icons/icon.png"
    },
    "options_ui": {
        "page": "options.html",
        "browser_style": true
      },
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "96": "icons/icon96.png"
    },
    "background": {
        "page": "background.html"
    },
    "content_scripts": [{
        "matches": ["https://*.whatsapp.com/*"],
        "css": ["min-size.css"],
        "all_frames": true
    }]
}
